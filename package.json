{
  "name": "cute-secure-messenger",
  "version": "1.0.0",
  "description": "Cute Pastel AES-256 Encryption Tool with Contacts",
  "author": "lizzienya (lizzie.dev)",
  "license": "GPL-3.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.cute.securemessenger",
    "productName": "Cute Secure Messenger",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "src/assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.exe"
    },
    "compression": "maximum",
    "asar": true
  },
  "devDependencies": {
    "electron": "^21.4.4",
    "electron-builder": "^23.6.0"
  }
}
