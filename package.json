{
  "name": "cute-secure-messenger",
  "version": "2.0.8",
  "description": "Cute Pastel AES-256 Encryption Tool with Contacts",
  "author": "lizzienya (lizzie.dev)",
  "license": "GPL-3.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.cute.securemessenger",
    "productName": "Cute Secure Messenger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!mobile/*",
      "!android_app/*",
      "!android_version/*",
      "!ios_version/*",
      "!sw.js",
      "!manifest.json",
      "!dist/*"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "${productName}.exe"
    },
    "compression": "maximum",
    "asar": true
  },
  "dependencies": {
    "node-rsa": "^1.1.1",
    "openpgp": "^6.3.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^21.4.4",
    "electron-builder": "^23.6.0",
    "png-to-ico": "^3.0.1"
  }
}
